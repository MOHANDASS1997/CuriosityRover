<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.curiosityrover">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/rover_launch_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/rover_launch_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CuriosityRover"
        tools:targetApi="31">
        <activity
            android:name="com.curiosityrover.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.curiosityrover.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.curiosityrover.CardDescription"
            android:exported="false" />
        <activity
            android:name="com.curiosityrover.SavedCardDescription"
            android:exported="false" />
    </application>

</manifest>